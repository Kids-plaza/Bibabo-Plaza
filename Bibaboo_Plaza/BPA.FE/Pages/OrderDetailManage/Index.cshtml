<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].created_on)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].is_deleted)
            </th>
